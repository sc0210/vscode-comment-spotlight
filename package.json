{
  "name": "custom-comment-highlighter",
  "displayName": "Custom Comment Highlighter",
  "description": "Highlight custom keywords in comments with configurable colors and toggle functionality",
  "version": "0.0.1",
  "publisher": "samchen",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "customCommentHighlighter.toggleHighlight",
        "title": "Custom Comment Highlighter: Toggle Highlighting"
      }
    ],
    "configuration": {
      "title": "Custom Comment Highlighter",
      "properties": {
        "customCommentHighlighter.keywords": {
          "type": "array",
          "default": [
            {
              "keyword": "//[SamChen]",
              "color": "#8B2635"
            },
            {
              "keyword": "// TODO:",
              "color": "#1B5E63"
            },
            {
              "keyword": "//FIX:",
              "color": "#8B6F00"
            },
            {
              "keyword": "// NOTE:",
              "color": "#2C5F6F"
            },
            {
              "keyword": "// HACK:",
              "color": "#8B5A2B"
            }
          ],
          "description": "Array of keywords to highlight with their corresponding colors. Each item should have 'keyword' (string) and 'color' (hex color code) properties.",
          "items": {
            "type": "object",
            "properties": {
              "keyword": {
                "type": "string",
                "description": "The keyword to highlight (case-sensitive)"
              },
              "color": {
                "type": "string",
                "description": "Background color in hex format (e.g., #FF6B6B)"
              }
            },
            "required": ["keyword", "color"]
          }
        },
        "customCommentHighlighter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable comment highlighting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
